pkgname='ph_bootsound'
pkgver='1.0'
pkgrel='1'
pkgdesc='A program based on MPlayer, which plays a sound if added to autorun of your WM. Contains a script for changing the sound. Program for OGG files. This package is NOT adding the program to autorun, you must do it manually."
url="http://www.phitherek.xwp.pl/projects.html'
arch=('i686')
license='unknown'
depends=('mplayer' 'libogg' 'libvorbis')
source='http://www.phitherek.xwp.pl/files/bootsound/bootsound.tar.gz'
md5sums=('873d135efb3bf3fdab66fe18b41152e5')
build() {
cd "$startdir"
./InstallBootsound
}
